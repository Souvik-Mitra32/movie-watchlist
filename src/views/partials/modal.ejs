<dialog class="watchlist-modal" id="watchlistModal">
    <div class="modal-content">
        <div class="heading-and-button">
            <div class="modal__heading">Add movie: <span id="modalMovieTitle"></span></div>
            <div class="sidebar__icon" id="closeModal"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512">
                    <path
                        d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z" />
                </svg>
            </div>
        </div>
        <span>To watchlist:</span>
        <ul class="sidebar__list">
            <% if (watchlists && watchlists.length>0) { %>
                <% for (const watchlist of watchlists) { %>
                    <li class="sidebar__item">
                        <form method="POST" class="watchlistForm" data-watchlist-id="<%= watchlist.id %>">
                            <input type="hidden" name="movieId" />
                            <button type="submit" class="sidebar__link">
                                <img src="./assets/icons/watchlist_avatar.svg" class="sidebar__img" />
                                <span class="sidebar__text">
                                    <%= watchlist.name %>
                                </span>
                            </button>
                        </form>
                    </li>
                    <% } %>
                        <% } %>
                            <div class="sidebar__item">
                                <a href="/new-watchlist" class="btn">
                                    <span class="btn__icon"><svg xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 448 512">
                                            <path
                                                d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" />
                                        </svg></span>
                                    <span class="btn__text">Create Watchlist</span>
                                </a>
                            </div>
        </ul>
    </div>
</dialog>